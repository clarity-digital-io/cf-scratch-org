<aura:component>
	<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
	<aura:registerEvent name="DigitalSignatureEvent" type="c:DigitalSignatureEvent"/>

    <aura:attribute name="responseSigned" type="String"/>
	<aura:attribute name="options" type="List" default="[{'label': 'I understand this is legal representation of my signature.', 'value': 'valid'}]"/>
    <aura:attribute name="agreed" type="Boolean" default="false"/>
    <aura:attribute name="name" type="String" default=""/>
    <aura:attribute name="value" type="List" default="option1"/>

	<lightning:input type="text" name="Name" label="Type Your Name" value="{! v.name }" oncommit="{! c.handleSignUpdate }" />

	<lightning:checkboxGroup 
		name="Agree Group"
		options="{! v.options }"
		value="{! v.value }"
		onchange="{! c.handleAgreeChange }"
	/>

</aura:component>	
