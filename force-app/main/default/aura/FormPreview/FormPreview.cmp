<aura:component access="global" implements="force:hasRecordId,force:lightningQuickAction,lightning:isUrlAddressable,force:appHostable" >

    <lightning:workspaceAPI aura:id="workspace" />
    <lightning:navigation aura:id="navService"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute access="global" name="recordId" type="String" required="true" default="default"/>

    <lightning:container src="{!$Resource.ClarityFormsResponse + '/index.html?responseId=' + v.recordId}" onmessage="{!c.handleMessage}" />

</aura:component>