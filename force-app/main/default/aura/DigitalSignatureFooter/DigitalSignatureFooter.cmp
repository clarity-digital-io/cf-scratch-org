<aura:component controller="DigitalSignature">
	<lightning:overlayLibrary aura:id="overlayLib"/>
	<aura:handler event="c:DigitalSignatureEvent" action="{!c.handleSignatureEvent}"/>

	<aura:attribute name="loading" type="Boolean"/>
	<aura:attribute name="notagreed" type="Boolean" default="true" />
	<aura:attribute name="signature" type="String"/>
	<aura:attribute name="body" type="String"/>

	<div>
		<aura:if isTrue="{! v.loading }">
			<lightning:spinner alternativeText="Loading" />
			<aura:set attribute="else">
				<lightning:button name="cancel" label="Cancel" onclick="{!c.handleCancel}"/>
				<lightning:button disabled="{!v.notagreed}" name="insert" label="Insert" variant="brand" onclick="{!c.handleInsert}"/>
			</aura:set>
		</aura:if>  
	</div>
	
</aura:component>